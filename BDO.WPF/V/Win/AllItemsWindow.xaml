<Window x:Class="BDO.WPF.V.Win.AllItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDO.WPF.V.Win"
        xmlns:controls="clr-namespace:BDO.WPF.Controls"
        xmlns:finders="clr-namespace:BDO.WPF.V.Finders"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Title="AllItemsWindow" Height="550" Width="400">
    <Window.Resources>
        <Style TargetType="Window" BasedOn="{StaticResource BaseWindowStyle}"/>
    </Window.Resources>
    <Grid>
        <controls:WindowHost Title="All Items" x:Name="Host">
            <finders:ItemFinderActionView Margin="3"/>
        </controls:WindowHost>
    </Grid>
</Window>
